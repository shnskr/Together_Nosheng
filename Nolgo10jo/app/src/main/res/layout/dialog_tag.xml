<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@color/supterLightPinkBackgroud">

    <ListView
        android:id="@+id/lv_tag"
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:layout_marginBottom="10dp"/>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center">

        <EditText
            android:id="@+id/etxt_tagname"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:hint="태그를 정해보세요!"
            android:textAlignment="center"
            android:maxLength="8"
            android:maxLines="1"
            android:layout_marginLeft="5dp"/>

        <Button
            android:id="@+id/btn_add_tag"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="테그 추가"
            android:textColor="@color/Grapefruit"
            android:textStyle="bold"
            android:background="@drawable/backgroud_tag"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="right">

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:text="@string/btn_cancel"
            android:textColor="@color/googleRed" />

        <Button
            android:id="@+id/btn_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:text="@string/btn_ok"
            android:textColor="@color/facebookBlue"
            android:textStyle="bold"/>


    </LinearLayout>




</LinearLayout>