<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="305dp"
    android:layout_height="650dp"
    android:background="@color/maincolor">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_friend"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarFadeDuration="0"
        android:scrollbarSize="5dp"
        android:scrollbarThumbVertical="@android:color/darker_gray"
        android:scrollbars="vertical"/>

    <TextView
        android:id="@+id/tv_friend_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="친구가 없어요 T^ T"
        android:textSize="30sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/rv_friend"
        app:layout_constraintEnd_toEndOf="@+id/rv_friend"
        app:layout_constraintStart_toStartOf="@+id/rv_friend"
        app:layout_constraintTop_toTopOf="@+id/rv_friend" />

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>