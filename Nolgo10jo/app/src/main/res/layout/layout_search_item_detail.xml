<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/search_detail_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/search_detail_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="TextView"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/hy_gung_seu"/>

    <TextView
        android:id="@+id/search_detail_theme"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="TextView"
        android:layout_marginLeft="10dp"
        android:fontFamily="@font/hy_gung_seu"/>

    <TextView
        android:id="@+id/search_detail_date"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="TextView"
        android:layout_marginLeft="10dp"
        android:fontFamily="@font/hy_gung_seu"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/search_detail_like"
            android:layout_width="166dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TextView"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/hy_gung_seu"/>

        <Button
            android:id="@+id/search_detail_like_btn"
            android:layout_width="66dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="Button"
            android:fontFamily="@font/hy_gung_seu"
            android:background="@drawable/button_background"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="20dp">

        <Button
            android:id="@+id/search_bookmark"
            android:layout_width="wrap_content"
            android:layout_height="61dp"
            android:layout_weight="1"
            android:text="북마크에 저-장!"
            android:fontFamily="@font/hy_gung_seu"
            android:background="@drawable/button_background"/>
    </LinearLayout>

</LinearLayout>