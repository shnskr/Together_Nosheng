<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="5dp"
    android:gravity="center"
    android:background="#F15C5C">

    <LinearLayout
        android:id="@+id/lay_newTrip_code"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_trip_code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:layout_gravity="center"
            android:text="프로젝트 공유 코드"
            android:textSize="20sp"/>

        <Button
            android:id="@+id/btn_duplicate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:text="dup" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lay_newTrip_project"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/etxt_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="여행 이름을 정해보세요!" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lay_countCrew"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="5dp">

        <EditText
            android:id="@+id/etxt_numberCrew"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Member Number"
            android:inputType="numberDecimal"
            android:maxLength="2" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lay_selectDate"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/txt_startDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Start"
            android:textSize="20dp"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/txt_periodMark"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="~"
            android:textSize="20dp"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/txt_endDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="End"
            android:textSize="20dp"
            android:textAlignment="center"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lay_countDate"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/txt_countDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:text="19박 20일"
            android:textAlignment="center"
            android:textSize="20sp"/>

        <Button
            android:id="@+id/btn_today"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="today" />

    </LinearLayout>



    <com.squareup.timessquare.CalendarPickerView
        android:id="@+id/calendar"
        android:layout_width="350dp"
        android:layout_height="320dp"
        android:layout_marginTop="10dp"
        android:background="@color/material_on_background_emphasis_medium"
        app:tsquare_titleTextColor="#FFF"
        app:tsquare_headerTextColor="#FFF" />


</LinearLayout>